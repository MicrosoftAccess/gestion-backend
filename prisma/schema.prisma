//   // Other fields
// }
model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  surname  String
  rut      String @unique
  nrc      Int[]
  role     Role
  cases    Case[]
}

enum Role {
  STUDENT
  PROFFESOR
}

model Case {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  title       String
  nrc         Int
  description String
  campus      String
  files       String?
  status      Status   @default(UNSOLVED)
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}

enum Status {
  SOLVED
  UNSOLVED
}
